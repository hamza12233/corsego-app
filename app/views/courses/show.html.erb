<div class="row">
  <div class="col-lg-6">
    <%= render 'courses/course', course: @course %>
  </div>

  <div class="col-lg-6">
    <%= link_to 'Add Lesson', new_course_lesson_path(@course, @lesson), class:'btn btn-primary btn-sm text-white btn-block' %>
    <p></p>
    <% @lessons.each do |lesson| %>
      <%= render 'lessons/lesson', lesson: lesson %>
    <% end %>
  </div>
</div>
