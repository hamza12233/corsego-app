<div class="card">
  <div class="card-header">
    <%= link_to lesson.title, lesson %>
  </div>
  <div class="card-body">
    <%= lesson.content %>
  </div>
  <div class="card-footer">
    <%= link_to 'Edit', edit_lesson_path(lesson), class:'btn btn-sm btn-warning' %>
    <%= link_to 'Destroy', lesson, class:'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>

</div>
